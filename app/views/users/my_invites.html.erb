<div class="page-header">
  <h3>Events I'm Invited To</h3>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Host</th>
        <th>Date</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>

      <% @users.invites.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.host.name %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
